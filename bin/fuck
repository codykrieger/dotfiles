#!/bin/bash

usage () {
    cat << EOF
usage: $(basename $0) COMMAND [arguments]

OPTIONS:
    -h         Show this message.

COMMANDS:
    you        Kills processes by name. i.e. \`fuck you Firefox\`
EOF
}

while getopts "h" option ; do
    case $option in
        h)
            usage
            exit
            ;;
        ?)
            usage
            exit 1
            ;;
    esac
done

case $1 in
    'you')
        [ -z $2 ] && usage && exit 1
        echo -e "\n (╯°□°）╯︵ $2\n"
        sudo /usr/bin/pkill -9 $2
        exit
        ;;
    ??)
        usage
        exit 1
        ;;
esac

usage
